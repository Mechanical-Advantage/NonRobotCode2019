#include <FastLED.h>

#define NUM_LEDS 60
#define LED_PIN 2
#define DATA_PIN 7

void showStrip() {
FastLED.show();
}

void setAll(byte red, byte green, byte blue) {
  for(int i = 0; i < NUM_LEDS; i++ ){
  setPixels(i, red, green, blue);
    
  }
  showStrip();
}

CRGB leds[NUM_LEDS];
void setup() {
FastLED.addLeds<NEOPIXEL, LED_PIN>(leds, NUM_LEDS);
}

void setPixels(int Pixels, byte red, byte green, byte blue){
leds[Pixels].r = red;
leds[Pixels].g = green;
leds[Pixels].b = blue;

}
