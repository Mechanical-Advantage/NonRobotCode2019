#include <FastLED.h>

#define NUM_LEDS 60
#define LED_PIN 2
#define DATA_PIN 7

void showStrip() {
FastLED.show();
}

void setAll(byte red, byte green, byte blue) {
  for(int i = 0; i < NUM_LEDS; i++ ){
  setPixel(i, red, green, blue);
    
  }
  showStrip();
}

// The command above says to set all of the pixels to a 
//combination of a red byte, a green byte, and a blue byte

CRGB leds[NUM_LEDS];
void setup() {
FastLED.addLeds<NEOPIXEL, LED_PIN>(leds, NUM_LEDS);
}

void setPixel(int Pixel, byte red, byte green, byte blue){
leds[Pixel].r = red;
leds[Pixel].g = green;
leds[Pixel].b = blue;

}

//This is the same command as setAll, but with specific pixels.
//It takes a red, green, and blue byte.
void loop() {
  
  //setAll of the pixels to blue
  
  setAll(0x00, 0x00, 0xff);
  delay(1000);

//create a loop with a variable that counts down by 4,
//stops, and then resumes counting down by 4 untill there
//is 1 or 0 pixels left.

for(int f = 60; f >= 5; f = f-4){
  for(int w = f; w > f-4; w--){
      leds[w] = CRGB::Black;
      FastLED.show();
  }
      delay(1000);
}


  setAll(0x00, 0x00, 0x00);
  delay(1000);
  
  //set the color of all of the LEDS to GREEN
  //
  
  setAll(0x00, 0xff, 0x00);
  
    
  for(int o = 60; o >= 46; o--){
    leds[o] = CRGB::Black;
    FastLED.show();
    delay(2250);
  }
  
leds[45] = CRGB::Black;
FastLED.show();
  
  //change the color of all of the LEDS to YELLOW
  //
  
for(int f = 45; f >= 0; f--)
setPixel(f, 0xff, 0xff, 0x00);

for(int o = 45; o >= 31; o--){
    leds[o] = CRGB::Black;
    FastLED.show();
    delay(2250);
}

    leds[30] = CRGB::Black;
    FastLED.show();


//change the color of all of the LEDS to ORANGE
//

for(int f = 30; f >= 0; f--)
setPixel(f, 0xff, 0x25, 0x00);

for(int o = 30; o >= 16; o--){
    leds[o] = CRGB::Black;
    FastLED.show();
    delay(2250);
}

    leds[15] = CRGB::Black;
    FastLED.show();

//changed the color of the LEDS to RED
//

for(int f = 15; f >= 0; f--)
setPixel(f, 0xff, 0x00, 0x00);

for(int o = 15; o >= 7; o--){
    leds[o] = CRGB::Black;
    FastLED.show();
    delay(2250);
}

leds[6] = CRGB::Black;
FastLED.show();
delay(1500);

setAll(0xff, 0x00, 0x00);
delay(1000);


for(int f = 60; f >= 5; f = f-4){
  for(int w = f; w > f-4; w--){
      leds[w] = CRGB::Black;
      FastLED.show();
  }
      delay(1000);
} 

for(int a = 15; a >= 0; a--)
setPixel(a, 0x00, 0x00, 0x00);
delay(1000);

}
